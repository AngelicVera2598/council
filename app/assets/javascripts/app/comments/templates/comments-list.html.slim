md-content
  md-list.comments-list
    md-item.comment-item(ng-repeat="comment in comments")
      md-item-content
        .md-tile-left
          img.face(ng-src="{{comment.author.picture}}")
        .md-tile-content
          p(ng-bind="comment.body")
        .md-tile-right
          span(am-time-ago="comment.created_at")
      md-divider(ng-if="!$last")
